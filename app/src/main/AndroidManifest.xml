<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jake.medicationtracker">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.MedicationTracker">
        <activity
            android:name=".MedicationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AppointmentsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".notifications.AppointmentReminderBroadcast" />
        <receiver android:name=".notifications.MedicationReminderBroadcast" />
    </application>

</manifest>